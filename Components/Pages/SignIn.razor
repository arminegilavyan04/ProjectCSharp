@page "/signin"
@using System.ComponentModel.DataAnnotations

<h3>Sign In</h3>

<EditForm Model="@loginModel" OnValidSubmit="@HandleSignIn">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <style>
        .narrow-input {
            width: 200px; /* Adjust the width as needed */
        }
    </style>

    <div class="form-group">
        <label for="email">Email:</label>
        <InputText id="email" @bind-Value="loginModel.Email" class="form-control narrow-input" />
    </div>



    <style>
        .narrow-input {
            width: 200px; /* Adjust the width as needed */
        }
    </style>

    <div class="form-group">
        <label for="password">Password:</label>
        <InputText id="password" @bind-Value="loginModel.Password" type="password" class="form-control narrow-input" />
    </div>


    <button type="submit" class="btn btn-primary">Sign In</button>
</EditForm>

@code {
    private LoginModel loginModel = new LoginModel();

    private void HandleSignIn()
    {
        // Check email and password (dummy example)
        if (loginModel.Email == "admin@example.com" && loginModel.Password == "password")
        {
            // Successful sign-in, do something here like redirecting to another page
            Console.WriteLine("Sign-in successful!");
        }
        else
        {
            // Sign-in failed, show error message or handle accordingly
            Console.WriteLine("Invalid email or password");
        }
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; }

        [Required(ErrorMessage = "Password is required")]
        public string Password { get; set; }
    }
}
